<article class="article" data-section="article">
	<header>
		<div class="article__image--hero">
			<img src="{{ article.post.image }}" alt=""/>
		</div>

		<h1 class="article__heading">{{ article.post.title }}</h1>

		<p class="article__standfirst">{{ article.post.standfirst }}</p>

		<time class="article__date">{{ article.post.date }}</time>
	</header>

	{{{ article.post.body }}}
</article>

<aside class="associated" data-section="associatedArticles">
	<h1>More stories</h1>

	<ul>
		{{#each posts.posts}}
			<li>
				<img src="{{this.thumbnail}}" alt=""/>
				<p>{{this.title}}</p>
				<a href="#">Read more <span class="visually-hidden">about {{this.title}}</span></a>
			</li>
		{{/each}}
	</ul>
</aside>
