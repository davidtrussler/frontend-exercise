<section class="article" data-section="article">
	<div class="article__image--hero">
		<img src="{{ article.post.image }}" alt=""/>
	</div>

	<h1>{{ article.post.title }}</h1>

	<p>{{ article.post.standfirst }}</p>

	<time>{{ article.post.date }}</time>

	{{{ article.post.body }}}
</section>

<aside class="associated" data-section="associatedArticles">
	<h1>More stories</h1>

	<ul>
		{{#each posts.posts}}
			<li>
				<img src="{{this.thumbnail}}" alt=""/>
				<h2>{{this.title}}</h2>
				<a href="#">Read more <span class="visually-hidden">about {{this.title}}</span></a>
			</li>
		{{/each}}
	</ul>
</section>
